{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ES2020",
    "moduleResolution": "Node",
    "strict": true,
    "skipLibCheck": true,
    "declaration": false,
    "sourceMap": false,
    "noUnusedLocals": true,
    "esModuleInterop": true,
    "baseUrl": "./",
    "outDir": "dist"
  },
  "include": ["packages/**/*.ts", "rollup.config.ts"],
  "exclude": ["node_modules"]
}
