{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ES2020",
    "moduleResolution": "Node",
    "strict": true,
    "skipLibCheck": true,
    "sourceMap": false,
    "noUnusedLocals": true,
    "esModuleInterop": true,
    "baseUrl": "./",
    "noImplicitThis": false
  },
  "exclude": ["node_modules"],
  "include": [
    "rollup.config.ts",
    "src/**/*.ts",
    "packages/**/*.ts",
    "src/utils/clean.js"
  ]
}
